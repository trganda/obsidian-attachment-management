{
  "types": [
    "node"
  ],
  "compilerOptions": {
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "Node16",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node16",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "lib": [
      "DOM",
      "ES2018",
      "ES2019",
      "ES2020"
    ]
  },
  "resolveJsonModule": true,
  "include": [
    "src/**/*.ts"
  ],
}