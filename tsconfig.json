{
  "types": ["node"],
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
	"strictNullChecks": true,
    "lib": [
      "DOM",
      "ES2018",
      "ES2019",
      "ES2020"
    ]
  },
  "resolveJsonModule": true,
  "include": [
    "src/**/*.ts"
  ]
}
